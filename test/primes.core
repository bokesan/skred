--
-- sieve of erathostenes.
--

-- main :: String
main = showInts (take 1000 (sieve (enumFrom 2)));

-- showInts :: [Int] -> String
showInts = foldr (\n s -> showsInt n ('\n' : s)) "";

-- sieve :: [int] -> [int]
sieve xs = case xs of {
             <0> -> error "foo";
             <1> h t -> h : sieve (sieve1 h t)
           };

sieve1 p xs = case xs of {
                <0> -> [];
                <1> h t -> if h % p == 0 then
                             sieve1 p t
                           else
                             h : (sieve1 p t)
              }
